<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.

    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->

    </style>

    <style name="NoActionbarAppTheme_v19" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/material_green_A200</item>
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/material_green_A200</item>
        //设置以下属性状态栏可以沉浸布局背景，最好在布局中加上fitsSystemWindows防止移位
        //在和系统drawerlayout在一起使用colorPrimaryDark有效果
        //否则则没有效果，显示的是布局背景的颜色，如果布局的背景没有则状态栏显示的是白色(最好设置有色背景)
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme_v19" parent="AppBaseTheme">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/material_green_A200</item>
        <item name="colorControlHighlight">@color/material_blue_500</item>
    </style>
</resources>