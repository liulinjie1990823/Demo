<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_orientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="方向" />

    <Button
        android:id="@+id/btn_accelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加速度" />

    <Button
        android:id="@+id/btn_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温度" />

    <Button
        android:id="@+id/btn_magnetic_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="磁场" />

    <Button
        android:id="@+id/btn_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="光线" />

    <Button
        android:id="@+id/btn_unknown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不知道" />

    <TextView
        android:id="@+id/tv_sensor_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_sensor_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>